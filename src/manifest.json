{
    "name": "Dominion Translator",
    "version": "0.1.0",
    "manifest_version": 2,

    "default_locale": "ja",

    "description": "The translator",

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

    "content_scripts": [
        {
            "matches": ["http://play.goko.com/Dominion/gameClient.html"],
            "js": ["js/rsvp.min.js", "content.js"],
            "run_at": "document_start"
        }
    ],

    "web_accessible_resources": [
        "_locales/ja/cards.json",
        "_locales/ja/cardTypes.json"
    ]
}